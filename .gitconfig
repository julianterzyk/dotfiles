[push]
	default = current
[pull]
	default = current
[user]
	name = Julian Terzyk
	email = julianterzyk@gmail.com
[core]
	quotepath = false
	excludesfile = ~/.gitignore
[color]
	diff = auto
	status = auto
	branch = auto
[diff]
	rename = copy
	color = auto
[apply]
	whitespace = strip
[pager]
	color = true
[alias]
	co = "checkout"
	ci = "commit"
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[branch]
	autosetuprebase = always
[url "git@github.com:"]
	insteadOf = https://github.com/
[init]
	templatedir = ~/.git-templates
